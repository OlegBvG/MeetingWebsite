<Configuration status="debug" strict="true"
               name="XMLConfigTest" packages="org.apache.logging.log4j.test">
  <Filter type="ThresholdFilter" level="trace" />

  <Appenders>
    <Console name="STDOUT">
      <Layout type="PatternLayout" pattern="%m %n" />
    </Console>
  </Appenders>

  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="STDOUT" />
    </Root>
  </Loggers>

</Configuration>